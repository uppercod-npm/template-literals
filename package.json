{
    "name": "@uppercod/template-literals",
    "type": "module",
    "version": "1.0.0",
    "description": "Capture the position of the template literals of a js, ts, tsx and jsx code",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "test": "uvu -r tsm tests",
        "types": "tsc",
        "exports": "esbuild src/modules.ts --format=esm,cjs --dist=dist",
        "prepublishOnly": "npm run test && npm run exports"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/uppercod-npm/template-literals.git"
    },
    "author": "UpperCod",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/uppercod-npm/template-literals/issues"
    },
    "homepage": "https://github.com/uppercod-npm/template-literals#readme",
    "devDependencies": {
        "esbuild": "^0.14.38",
        "tsm": "^2.2.1",
        "typescript": "^4.6.3",
        "uvu": "^0.5.3"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false
    }
}
